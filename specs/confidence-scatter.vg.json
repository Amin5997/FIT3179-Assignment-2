{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution of Fire Radiative Power",
  "width": 600,
  "height": 300,
  "data": {"url": "data/australian_fires.csv"},
  "transform": [
    {"calculate": "toNumber(datum.frp)", "as": "frp_numeric"},
    {"filter": "datum.frp_numeric <= 500"}
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "frp_numeric",
      "type": "quantitative",
      "bin": true,
      "title": "Fire Radiative Power"
    },
    "y": {
      "aggregate": "count",
      "title": "Number of Fires"
    }
  }
}
